<odoo>
    <data>
        <record id="view_bein_gov_inventory_guatemala_purchase_mode_tree" model="ir.ui.view">
            <field name="name">Vista de listado de modalidades de compra</field>
            <field name="model">bein_gov_inventory_guatemala.purchase_mode</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_bein_gov_inventory_guatemala_purchase_mode_form" model="ir.ui.view">
            <field name="name">Vista de formulario de modalidades de compra</field>
            <field name="model">bein_gov_inventory_guatemala.purchase_mode</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="name"/>
                            </group>

                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>